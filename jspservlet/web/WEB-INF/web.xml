<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

  <!-- TASK 1 -->
  <servlet>
    <servlet-name>CounterServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.task1.CounterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CounterServlet</servlet-name>
    <url-pattern>/counterServlet</url-pattern>
  </servlet-mapping>

  <!-- TASK 2 -->
  <servlet>
    <servlet-name>RedirectServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.task2.RedirectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RedirectServlet</servlet-name>
    <url-pattern>/redirectServlet</url-pattern>
  </servlet-mapping>


  <!-- TASK 3 -->
  <servlet>
    <servlet-name>RedirectServletTwo</servlet-name>
    <servlet-class>com.clouway.jspservlet.task3.RedirectServletTwo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RedirectServletTwo</servlet-name>
    <url-pattern>/redirectServletTwo</url-pattern>
  </servlet-mapping>


  <!-- TASK 4 -->
  <servlet>
    <servlet-name>Servlet1</servlet-name>
    <servlet-class>com.clouway.jspservlet.task4.Servlet1</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet1</servlet-name>
    <url-pattern>/servlet1</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Servlet2</servlet-name>
    <servlet-class>com.clouway.jspservlet.task4.Servlet2</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet2</servlet-name>
    <url-pattern>/servlet2</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Servlet3</servlet-name>
    <servlet-class>com.clouway.jspservlet.task4.Servlet3</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet3</servlet-name>
    <url-pattern>/servlet3</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ResultServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.task4.ResultServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ResultServlet</servlet-name>
    <url-pattern>/resultServlet</url-pattern>
  </servlet-mapping>

  <!-- ONLINE BANKING -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.onlinebanking.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.onlinebanking.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DepositServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.onlinebanking.DepositServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DepositServlet</servlet-name>
    <url-pattern>/deposit</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>WithdrawServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.onlinebanking.WithdrawServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WithdrawServlet</servlet-name>
    <url-pattern>/withdraw</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.onlinebanking.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>
  
  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.clouway.jspservlet.onlinebanking.SecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/onlinebanking/index.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/onlinebanking/</url-pattern>
  </filter-mapping>

  <!-- REGISTRATION FORM -->
  <servlet>
    <servlet-name>ValidatorServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.registrationform.ValidatorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ValidatorServlet</servlet-name>
    <url-pattern>/validate</url-pattern>
  </servlet-mapping>
  
  <!-- CALCULATOR -->
  <servlet>
    <servlet-name>CalculatorServlet</servlet-name>
    <servlet-class>com.clouway.jspservlet.calculator.CalculatorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalculatorServlet</servlet-name>
    <url-pattern>/calculator</url-pattern>
  </servlet-mapping>
  
</web-app>
